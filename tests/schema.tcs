//-*- mode: JavaScript -*-

definitions
{
    foo.properties
    {
        required
        {
            a.const: "FOO"
            b: "number"
        }
        additional: false
    }

    bar.properties
    {
        required
        {
            a.const: "BAR"
            c: "string"
        }
    }

    baz.properties
    {
        required
        {
            b.const: 42
            c: "integer"
        }
        optional
        {
            d: "null"
        }
        additional: false
    }
}

any_of
[
    { if.properties.required.a.const: "FOO" then: "foo" }
    { if.properties.required.a.const: "BAR" then: "bar" }
    { if.properties.required.b.const: 42 then: "baz" }
]
