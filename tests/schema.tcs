//-*- mode: JavaScript -*-

definitions
{
    foo
    {
        required [ "a", "b" ]
        properties
        {
            a: true
            b: "number"
        }
        additional_properties: false
    }

    bar
    {
        required [ "a", "c" ]
        properties
        {
            c: "string"
        }
    }

    baz
    {
        required [ "b", "c", "d" ]
        properties
        {
            c: "integer"
            d: "null"
        }
    }
}

any_of
[
    { if.properties.a.const: "FOO" then: "foo" else: false }
    { if.properties.a.const: "BAR" then: "bar" else: false }
    { if.properties.b.const: 42 then: "baz" else: false }
]
