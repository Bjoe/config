//-*- mode: JavaScript -*-

definitions
{
    foo
    {
        required_properties
        {
            a.const: "FOO"
            b: "number"
        }
        additional_properties: false
    }

    bar
    {
        required_properties
        {
            a.const: "BAR"
            c: "string"
        }
    }

    baz
    {
        required_properties
        {
            b.const: 42
            c: "integer"
        }
        optional_properties
        {
            d: "null"
        }
        additional_properties: false
    }
}

any_of
[
    { if.required_properties.a.const: "FOO" then: "foo" }
    { if.required_properties.a.const: "BAR" then: "bar" }
    { if.required_properties.b.const: 42 then: "baz" }
]
